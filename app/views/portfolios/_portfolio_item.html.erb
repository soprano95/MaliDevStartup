<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id%>">
    <a href='<%= portfolio_show_path(portfolio_item) %>'>
      <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>
    </a>
    <div class="card-body">
      <p class="card-text">
         <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to fa_icon('pencil-square-o'), edit_portfolio_path(portfolio_item) if logged_in? (:site_admin)%>
        </div>
        <div class="btn-group">
           <%= link_to fa_icon('trash'), portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?'} if logged_in? (:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>





	
	