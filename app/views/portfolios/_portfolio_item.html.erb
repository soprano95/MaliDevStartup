<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <p class="card-text"><span><p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p></span> <p><%= portfolio_item.subtitle %></p>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in? (:site_admin) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delite", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Etes vous sure?'} if logged_in? (:site_admin) %></button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>





	
	