<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id%>">
    <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <p class="card-text"><span><p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p></span> <p><%= portfolio_item.subtitle %></p>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-primary' if logged_in? (:site_admin) %>
          <%= link_to "Delite", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Etes vous sure?'}, class: 'btn btn-danger' if logged_in? (:site_admin) %>
        </div>
       
      </div>
    </div>
  </div>
</div>





	
	