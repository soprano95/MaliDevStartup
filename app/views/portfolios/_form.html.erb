<%= form_for(@portfolio_item) do |f| %>
 <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
       <%= js add_gritter(error, title: "Abdoul Aziz Sacko")%>
    <% end %>
<% end %>
<div class="row">
  <div class="col-md-6">
     <div class="form-group">
    <%= f.label :Titre %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :SousTitre %>
    <%= f.text_field :subtitle, class: 'form-control' %>
  </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Télécharger un fichier image principal <%= f.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
         Télécharger un fichier image miniature <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>

  </div>

  <div class="col-md-6">
    <div class="form-group">
    <%= f.label :Coprs %>
    <%= f.text_area :body, class: 'form-control', rows: 4 %>
  </div>
  </div>
</div>

  <hr>
  <div class="col-md-12">
  <h2>Technologies Utilisées:</h2>
      <div>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit 'Enregistré l article du portofeuille', class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>
