<%= form_for(@portfolio_item) do |f| %>
<div class="row">
  <div class="col-md-6">
     <div class="form-group">
    <%= f.label :Titre %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :SousTitre %>
    <%= f.text_field :subtitle, class: 'form-control' %>
  </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Télécharger un fichier image principal <%= f.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
         Télécharger un fichier image miniature <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>

  </div>

  <div class="col-md-6">
    <div class="form-group">
    <%= f.label :Coprs %>
    <%= f.text_area :body, class: 'form-control', rows: 4 %>
  </div>
  </div>
</div>

  <hr>
  <div class="col-md-12">
  <h2>Technologies Utilisées:</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form| %>
    <div class="form-group">
      <%= technology_form.label :Nom_Technologie_utilisée %>
      <%= technology_form.text_field :name, class: 'form-control' %>
    </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit 'Enregistré l article du portofeuille', class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>
