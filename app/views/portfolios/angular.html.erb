<h1>Angulra Portfolio items</h1>

<%= link_to "Crée un nouveau Portefeuille", new_portfolio_path if logged_in?(:site_admin) %>
<% @angular_portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body%></p>
	<%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
	<%= link_to "Modifié", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %>
    <%= link_to 'Suprimé', portfolio_path(portfolio_item.id), method: :delete, data: { confirm: 'Étes vous sure?' } if logged_in?(:site_admin)%>

<% end %>