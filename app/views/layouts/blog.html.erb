<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <metat name="keywords" content="<%= @seo_keywords %>/>

     <%= favicon_link_tag 'favicons/image.png' %>


    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

          
          <%= render 'shared/blog_masthead' %>
        

        <div class="container">        
          <div class="row">

            <%= yield %>

            <%= render 'shared/blog_sidebar' %>
        </div>
        
            <%= render 'shared/application_nav', location: 'bottom' %>
              <%= alerts %>
            <%= render 'shared/blog_footer' %>
            <%= source_helper("blog") %>
          
      </div>
  </body>
</html>
